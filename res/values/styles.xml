<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="HeaderStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#33B5E5</item>
    </style>

    <style name="ListItemStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="FreezingListItemStyle" parent="ListItemStyle">
        <item name="android:background">#3C4064</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SmallTextFreezingListItemStyle" parent="FreezingListItemStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>
    
    <style name="SmallTextListItemStyle" parent="ListItemStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
